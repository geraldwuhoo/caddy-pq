# hadolint global ignore=DL3018,DL3029

FROM docker.io/library/caddy:2.10.2-builder-alpine AS builder

RUN GOOS=linux GOARCH=arm64 xcaddy build \
    --with github.com/caddyserver/replace-response \
    --with github.com/caddy-dns/cloudflare

FROM --platform=linux/arm64 docker.io/arm64v8/caddy:2.10.2-alpine

COPY --from=builder /usr/bin/caddy /usr/bin/caddy
